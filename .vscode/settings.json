{
	// workbench
	"workbench.startupEditor": "none",
	// editor
	"editor.minimap.renderCharacters": false,
	"editor.minimap.maxColumn": 85,
	// files
	"files.exclude": {
		"node_modules/": true,
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
	},
	// per language
	"[json]": {
		"editor.detectIndentation": false,
		"editor.insertSpaces": false,
		"editor.tabSize": 2,
	},
	"[jsonc]": {
		"editor.detectIndentation": false,
		"editor.insertSpaces": false,
		"editor.tabSize": 2,
	},
	"[javascript]": {
		"editor.detectIndentation": false,
		"editor.insertSpaces": false,
		"editor.tabSize": 2,
	},
	"[typescript]": {
		"editor.detectIndentation": false,
		"editor.insertSpaces": false,
		"editor.tabSize": 2,
	}
}